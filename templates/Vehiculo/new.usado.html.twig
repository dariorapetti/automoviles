{% extends 'base.html.twig' %}

{% set edit = form.vars.value.id != null %}

{% import 'app/_macro_form.html.twig' as macro_form %}

{% block body %}
	{{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}
	{% include ('app/_fields_errors.html.twig') %}

	<div class="card card-custom">
		<div class="card-header">
			<div class="card-title">
				<span class="card-icon">
					<i class="flaticon-search text-primary"></i>
				</span>
				<h3 class="card-label">Crear Vehiculo Usado</h3>
			</div>
		</div>

		<div class="card-body">
			<div class="row">
				{{ macro_form._new_field(form.cliente, 'col-md-4') }}
			</div>
			<div class="row">
				{{ macro_form._new_field(form.anio, 'col-md-4') }}
				{{ macro_form._new_field(form.kilometros, 'col-md-4') }}
				{{ macro_form._new_field(form.precioRevista, 'col-md-4') }}
			</div>
      {% include 'vehiculo/new.html.twig' %}

      <div class="row" style="padding-bottom: 20px;">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header bg-light" style="padding:10px 0 10px 20px;">Accesorios</div>
            <div class="card-body">
              <div class="row">
                {{ macro_form._new_field(form.kitSeguridad, 'col-md-3') }}
                {{ macro_form._new_field(form.cubreAlfombras, 'col-md-3') }}
                {{ macro_form._new_field(form.titulo, 'col-md-3') }}
                {{ macro_form._new_field(form.cedulaVerde, 'col-md-3') }}
              </div>
              <div class="row">
                {{ macro_form._new_field(form.formulario08, 'col-md-3') }}
                {{ macro_form._new_field(form.grabadoAutopartes, 'col-md-3') }}
                {{ macro_form._new_field(form.duplicadoLlaves, 'col-md-3') }}
              </div>
              <div class="row">				
                {{ macro_form._new_field(form.vencimientoGnc, 'col-md-3') }}
                {{ macro_form._new_field(form.vencimientoVtv, 'col-md-3') }}
                {{ macro_form._new_field(form.informeDominio, 'col-md-3') }}
                {{ macro_form._new_field(form.patentes, 'col-md-3') }}
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        {{ macro_form._new_field(form.comentario, 'col-md-12') }}
		  </div>
		</div>

		<div class="card-footer d-flex justify-content-between">
			<a href="{{ path('vehiculo_index') }}" class="btn btn-light-dark font-weight-bold">Volver</a>
			{{ form_widget(form.submit) }}
		</div>
	</div>
	{{ form_widget(form._token) }}
	{{ form_end(form, {"render_rest": false}) }}

{% endblock %}

{% block javascripts %}

	{{ parent() }}
  <script src="{{ asset('plugins/autoNumeric/autoNumeric.min.js') }}" type="text/javascript"></script>

	<script src="{{ asset(__PREFIX_JAVASCRIPT__ ~ 'config/config-form.js') }}"></script>
	<script src="{{ asset(__PREFIX_JAVASCRIPT__ ~ 'app/vehiculo/new.js') }}"></script>
	<script src="{{ asset(__PREFIX_JAVASCRIPT__ ~ 'app/vehiculo/new.usado.js') }}"></script>

{% endblock %}
