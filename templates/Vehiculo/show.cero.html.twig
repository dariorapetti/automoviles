{% extends 'base.html.twig' %}

{% import 'app/_macro_show.html.twig' as macro_show %}

{% block body %}

	<div class="card card-custom">
		<div class="card-header">
			<div class="card-title">
				<span class="card-icon">
					<i class="flaticon-search text-primary"></i>
				</span>
				<h3 class="card-label">Detalles del veh&iacute;culo cero
					{{ entity }}</h3>
			</div>
			<div
				class="card-toolbar">
				<!--begin::Button-->
				<a href="{{ path('vehiculousado_edit', {'id': entity.id}) }}" class="btn btn-primary font-weight-bolder">
					<i class="la la-pen"></i>
					Editar
				</a>
				<!--end::Button-->
			</div>
		</div>

		<div
			class="card-body">
			<!--begin::Item-->
			<div class="row">
				{{ macro_show._show_detail('Proveedor', entity.proveedor, 'col-md-4') }}
			</div>
      {% include ('app/vehiculo/show.html.twig') %}
      <div class="row">
        {{ macro_show._show_detail('Comentario', entity.comentario, 'col-md-12') }}
      </div>
		</div>
		<div class="card-footer d-flex justify-content-between">
			<a href="{{ path('vehiculo_index') }}" class="btn btn-light-dark font-weight-bold">Volver al listado</a>
		</div>

	</div>

{% endblock %}
