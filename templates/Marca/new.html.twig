{% extends 'base.html.twig' %}

{% set edit = form.vars.value.id != null %}

{% import 'app/_macro_form.html.twig' as macro_form %}

{% block body %}
  {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}
  {% include ('app/_fields_errors.html.twig') %}

  <div class="card card-custom">
		<div class="card-header">
			<div class="card-title">
				<span class="card-icon"><i class="flaticon-search text-primary"></i></span>
				<h3 class="card-label">Crear Marca</h3>
			</div>
    </div>

    <div class="card-body">
      <div class="row">
        {{ macro_form._new_field(form.nombre, 'col-md-4') }}
      </div>
    </div>

    <div class="card-footer d-flex justify-content-between">
      <a href="{{ path('marca_index') }}" class="btn btn-light-dark font-weight-bold">Volver</a>
        {{ form_widget(form.submit) }}
    </div>
  </div>
  {{ form_widget(form._token) }}
  {{ form_end(form, {"render_rest": false}) }}

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset(__PREFIX_JAVASCRIPT__ ~ 'config/config-form.js') }}" ></script>
  <script src="{{ asset(__PREFIX_JAVASCRIPT__ ~ 'app/marca/new.js') }}" ></script>
{% endblock %}
